<body>
     
<div style="margin-top: 20px;margin-left:20px;margin-right:20px" class="well">
    
 
           
        	    <div class="form-group ">


       
        <table id="fresh-table" class="table" style="background: white;">
            <h1>Події</h1>
            <form action="/fuev" method="post">
            <label>Показати події користувача(введіть код користувача): </label> 
            <input type="text" name="id" style="width: 350px;" class="form-control" id="id">
            <br>
  <input type="submit" value="Шукати" style="width: 250px;" target="_blank"  id="button" class="btn btn-primary btn-lg btn-block email-button" />
  <br>
            </form>
            <br>
              <form action="/fevcode" method="post">
            <label>Показати подію за її кодом </label> 
            <input type="text" name="eid" class="form-control" style="width: 350px;margin" id="eid">
            <br>
  <input type="submit" value="Фільтрувати" style="width: 250px;"  target="_blank"  id="button" class="btn btn-primary btn-lg btn-block email-button" />
            </form>

 <thead>    
   <th data-field="id" data-sortable="true">Код події</th>
   <th data-field="evname" data-sortable="true">Назва</th>
 <th data-field="user" data-sortable="true">Код користувача</th>
 <th data-field="tag" data-sortable="true">Тег</th>
 <th data-field="evdescription" data-sortable="true">Про подію</th>
 <th data-field="lat" data-sortable="true">Широта</th>
 <th data-field="lng" data-sortable="true">Довгота</th>
 </thead>
 <tbody>
    {{#each events}}
    <tr><td>{{this._id}}</td><td>{{this.name}}</td><td>{{this.user}}</td><td>{{this.tag}}</td><td>{{this.description}}</td><td>{{this.lat}}</td><td>{{this.lng}}</td> </tr>
 {{/each}}
 </tbody>
 </table>
        

      
